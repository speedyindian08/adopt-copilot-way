<script>
(function() {
    // FAQ Accordion
    document.querySelectorAll('.ess-faq-item').forEach(function(item) {
        item.querySelector('.ess-faq-question').addEventListener('click', function() {
            document.querySelectorAll('.ess-faq-item').forEach(function(other) {
                if (other !== item) other.classList.remove('active');
            });
            item.classList.toggle('active');
        });
    });

    // Smooth scroll
    document.querySelectorAll('a[href^="#ess-"]').forEach(function(anchor) {
        anchor.addEventListener('click', function(e) {
            e.preventDefault();
            var target = document.querySelector(this.getAttribute('href'));
            if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    });

    {% if section.settings.enable_chatbot %}
    // Chatbot
    var ZOHO_BOOKING_URL = '{{ section.settings.booking_url }}';
    var CHAT_API_URL = '{{ section.settings.chat_api_url }}';
    var ZOHO_WEBHOOK_URL = '{{ section.settings.zoho_webhook_url }}';
    var SCHEDULING_KEYWORDS = ['yes', 'book', 'schedule a call', 'talk to someone', 'schedule', 'speak with', 'meeting', 'appointment'];

    var isOpen = false, messages = [], leadData = { name: null, email: null, phone: null, company: null };
    var bookingClicked = false, bookingCompleted = false, awaitingLeadInfo = null;

    var toggle = document.getElementById('ess-chatbot-toggle');
    var chatWindow = document.getElementById('ess-chatbot-window');
    var closeBtn = document.getElementById('ess-chatbot-close');
    var input = document.getElementById('ess-chatbot-input');
    var sendBtn = document.getElementById('ess-send-btn');
    var scheduleBtn = document.getElementById('ess-schedule-btn');
    var messagesEl = document.getElementById('ess-chatbot-messages');
    var bookingContainer = document.getElementById('ess-booking-container');
    var bookingIframe = document.getElementById('ess-booking-iframe');
    var closeBookingBtn = document.getElementById('ess-close-booking');

    function toggleChat() {
        isOpen = !isOpen;
        toggle.classList.toggle('active', isOpen);
        chatWindow.classList.toggle('active', isOpen);
    }

    if (toggle) toggle.addEventListener('click', toggleChat);
    if (closeBtn) closeBtn.addEventListener('click', toggleChat);

    function addMessage(content, isUser) {
        var div = document.createElement('div');
        div.className = 'ess-message ' + (isUser ? 'ess-user-message' : 'ess-bot-message');
        div.innerHTML = '<p>' + content + '</p>';
        messagesEl.appendChild(div);
        messagesEl.scrollTop = messagesEl.scrollHeight;
        messages.push({ role: isUser ? 'user' : 'assistant', content: content });
    }

    function showTyping() {
        var div = document.createElement('div');
        div.className = 'ess-message ess-bot-message ess-typing';
        div.innerHTML = '<div class="ess-typing-indicator"><span></span><span></span><span></span></div>';
        messagesEl.appendChild(div);
        messagesEl.scrollTop = messagesEl.scrollHeight;
        return div;
    }

    function extractLeadInfo(msg) {
        var emailMatch = msg.match(/[\w.-]+@[\w.-]+\.\w+/);
        if (emailMatch) leadData.email = emailMatch[0];
        var phoneMatch = msg.match(/[\d\s()+-]{10,}/);
        if (phoneMatch) leadData.phone = phoneMatch[0].trim();
    }

    function hasSchedulingIntent(msg) {
        var lower = msg.toLowerCase();
        return SCHEDULING_KEYWORDS.some(function(kw) { return lower.indexOf(kw) !== -1; });
    }

    function openBooking() {
        bookingClicked = true;
        bookingIframe.src = ZOHO_BOOKING_URL;
        bookingContainer.style.display = 'block';
        addMessage("Great! I've opened our booking calendar below. Please select a time that works for you.", false);
    }

    function closeBooking(completed) {
        bookingContainer.style.display = 'none';
        bookingIframe.src = '';
        addMessage(completed ? "You're all set ‚Äî looking forward to speaking with you!" : "No problem ‚Äî let me know if you need another time.", false);
        if (completed) bookingCompleted = true;
    }

    if (closeBookingBtn) closeBookingBtn.addEventListener('click', function() { closeBooking(false); });
    if (scheduleBtn) scheduleBtn.addEventListener('click', openBooking);

    function sendMessage(userMsg) {
        if (!userMsg.trim()) return;
        extractLeadInfo(userMsg);

        if (awaitingLeadInfo === 'name') {
            leadData.name = userMsg.trim();
            awaitingLeadInfo = 'email';
            addMessage(userMsg, true);
            addMessage("Thanks! And what's your email address?", false);
            return;
        }
        if (awaitingLeadInfo === 'email') {
            if (userMsg.indexOf('@') !== -1) {
                leadData.email = userMsg.trim();
                awaitingLeadInfo = null;
                addMessage(userMsg, true);
                openBooking();
            } else if (userMsg.toLowerCase() === 'skip') {
                awaitingLeadInfo = null;
                addMessage(userMsg, true);
                openBooking();
            } else {
                addMessage(userMsg, true);
                addMessage("Please enter a valid email or type 'skip'.", false);
            }
            return;
        }
        if (hasSchedulingIntent(userMsg)) {
            addMessage(userMsg, true);
            if (!leadData.name) {
                awaitingLeadInfo = 'name';
                addMessage("Before I open the calendar, could I get your name?", false);
                return;
            }
            openBooking();
            return;
        }

        addMessage(userMsg, true);
        if (!CHAT_API_URL) {
            addMessage("Please contact us at {{ section.settings.contact_email }} for assistance.", false);
            return;
        }
        var typing = showTyping();
        fetch(CHAT_API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ messages: messages })
        }).then(function(res) {
            typing.remove();
            if (res.ok) return res.json().then(function(data) { addMessage(data.response || data.content || "Please try again.", false); });
            addMessage("I'm having trouble. Please contact {{ section.settings.contact_email }}", false);
        }).catch(function() { typing.remove(); addMessage("Connection error. Please try again.", false); });
    }

    if (sendBtn) sendBtn.addEventListener('click', function() { var msg = input.value; input.value = ''; sendMessage(msg); });
    if (input) input.addEventListener('keypress', function(e) { if (e.key === 'Enter') { var msg = input.value; input.value = ''; sendMessage(msg); } });

    window.addEventListener('beforeunload', function() {
        if (messages.length > 1 && ZOHO_WEBHOOK_URL) {
            navigator.sendBeacon(ZOHO_WEBHOOK_URL, JSON.stringify({
                name: leadData.name, email: leadData.email, phone: leadData.phone, company: leadData.company,
                lead_source: 'Copilot Academy AI Agent', page_url: window.location.href,
                booking_clicked: bookingClicked, booking_completed: bookingCompleted,
                conversation_transcript: messages.map(function(m) { return m.role + ': ' + m.content; }).join('\n\n')
            }));
        }
    });
    {% endif %}
})();
</script>

